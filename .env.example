# Server
PORT=3000
HOST=127.0.0.1
NODE_ENV=production
APP_NAME=Dark Avian LABS
APP_ID=auth
BASE_DOMAIN=darkavianlabs.com
AUTH_SUBDOMAIN=auth
APP_LIST=corpus,parametric

# Session â€” generate a strong random string (32+ characters)
SESSION_SECRET=change-this-to-a-long-random-string
SESSION_COOKIE_NAME=darkavianlabs.auth.sid

# Behind reverse proxy
TRUST_PROXY=1
SECURE_COOKIES=1
COOKIE_DOMAIN=.darkavianlabs.com
AUTH_COOKIE_DOMAIN=.darkavianlabs.com
AUTH_COOKIE_NAME=darkavianlabs.auth.sid
SHARED_THEME_COOKIE_DOMAIN=.darkavianlabs.com

# Databases
CENTRAL_DB_PATH=./data/central.db

# Client (Vite dev proxy target, build-time)
VITE_BASE_PATH=/
VITE_DEV_API_TARGET=http://127.0.0.1:3000
VITE_APP_NAME=Dark Avian
VITE_APP_NAME_2=LABS
VITE_LEGAL_ENTITY_NAME=Dark Avian Labs
VITE_LEGAL_PAGE_URL=https://auth.darkavianlabs.com/legal
VITE_ALLOWED_NEXT_ORIGINS=https://auth.darkavianlabs.com,https://parametric.darkavianlabs.com,https://corpus.darkavianlabs.com
VITE_SEARCH_PLACEHOLDER=Search users...
VITE_AUTH_ADMIN_URL=https://auth.darkavianlabs.com/admin
VITE_SHARED_THEME_COOKIE_DOMAIN=.darkavianlabs.com
